<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="8dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/actorAvatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/actor_second"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/actorFullName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/actor_second_moc"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/actorAvatar"
        app:layout_constraintStart_toStartOf="@id/actorAvatar"
        app:layout_constraintTop_toBottomOf="@id/actorAvatar" />

</androidx.constraintlayout.widget.ConstraintLayout>